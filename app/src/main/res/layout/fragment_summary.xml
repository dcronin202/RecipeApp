<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/overview_video_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp" />

            <TextView
                android:id="@+id/overview_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/summary_ingredients_header" />

            <TextView
                android:id="@+id/overview_serving_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Ingredients go here."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/summary_simple_steps_header"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Recipe steps go here."/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="@string/summary_button_text"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>